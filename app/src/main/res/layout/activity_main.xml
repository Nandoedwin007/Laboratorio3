<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    android

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis contactos"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <ListView
            android:layout_width="305dp"
            android:layout_height="203dp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:id="@+id/lvContactos"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Agregar Contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAgregar"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/lvContactos" app:layout_constraintHorizontal_bias="0.5"/>

</android.support.constraint.ConstraintLayout>