<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis contactos"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
            android:id="@+id/textView"/>
    <ListView
            android:layout_width="305dp"
            android:layout_height="203dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:id="@+id/lvContactos"/>
    <Button
            android:text="Agregar Contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAgregar" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/lvContactos" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="108dp" android:layout_marginStart="108dp"/>

</android.support.constraint.ConstraintLayout>